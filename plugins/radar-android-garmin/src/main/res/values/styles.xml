<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- ToolBar -->
  <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="actionMenuTextColor">@android:color/white</item>
    <item name="android:itemBackground">@android:color/darker_gray</item>
    <item name="android:listPreferredItemHeightSmall">30dp</item>
  </style>

  <style name="HeadingStyle">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">17sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">@dimen/large_vertical_margin</item>
    <item name="android:layout_marginBottom">@dimen/small_vertical_margin</item>
  </style>

  <style name="SubHeadingStyle">
    <item name="android:textColor">@color/grey_text_color</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">@dimen/medium_vertical_margin</item>
    <item name="android:layout_marginBottom">@dimen/small_vertical_margin</item>
  </style>

  <style name="LabelStyle">
    <item name="android:textColor">@color/grey_text_color</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">15sp</item>
  </style>

  <style name="ChartHeadingStyle"  parent="CardHeadingStyle">
  </style>
  <style name="CardHeadingStyle">
    <item name="android:textColor">@color/grey_text_color</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/colorPrimaryDarkAlpha</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">5dp</item>
  </style>
  <style name="ChartStyle">
    <item name="android:layout_marginTop">@dimen/small_vertical_margin</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/chart_height</item>
  </style>

  <style name="ChartCardStyle" parent="CardStyle">
  </style>
  <style name="CardStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="cardCornerRadius">5dp</item>
    <item name="cardElevation">5dp</item>
    <item name="cardUseCompatPadding">true</item>
  </style>

  <style name="ChartLayoutStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="PagerTabStripText">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textSize">18dp</item>
  </style>
</resources>

